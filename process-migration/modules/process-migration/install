#!/bin/bash

set -e

SOURCES_DIR=/tmp/artifacts
PROCESS_MIGRATION_DIR=/opt/${JBOSS_PRODUCT}

unzip -q ${SOURCES_DIR}/${ADD_ONS_DISTRIBUTION_ZIP} -d ${SOURCES_DIR}

mkdir -p ${PROCESS_MIGRATION_DIR}
cp -f ${SOURCES_DIR}/${KIE_PROCESS_MIGRATION_DISTRIBUTION_JAR} ${PROCESS_MIGRATION_DIR}

chown -R jboss:root ${PROCESS_MIGRATION_DIR}
chmod -R ug+x ${PROCESS_MIGRATION_DIR}
